
<h1>Books</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th></th>
  </tr>
 
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <% if admin_signed_in?%>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <%end%>
    </tr>
  <% end %>
</table>